{# src/Surikat/BookingBundle/Resources/views/Booking/index.html.twig #}

{% extends "SurikatBookingBundle::layout.html.twig" %}

{% block title %}Index Booking Engine{% endblock %}

{% block body %}{{ parent( )}}
  <div class="container">
    <p>
      Contenu</p>
<table>
    <tr>
      <th>{{ booking.email}}</th>
      <th>{{ booking.totalPrice }}</th>
    </tr>
</table>

    <table>
                <caption></caption>
                <thead>
                <tr>
                    <th>{{ "Name"|trans }}</th>
                    <th>{{ "Surname"|trans }}</th>
                    <th>{{ "Country"|trans }}</th>
                    <th>{{ "Pricing"|trans }}</th>
                    <th>{{ "Price"|trans }}</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th colspan="4">{{ "Total"|trans }}</th>
                    <th>

                        {{ booking.totalPrice }}
                    </th>
                </tr>
                </tfoot>
                <tbody>

                {% for ticket in booking.tickets %}
                    {#{{ ticket.id }}#}
                    <tr>
                        <td>{{ ticket.name }}</td>
                        <td>{{ ticket.surname }}</td>
                        <td>{{ ticket.country }}</td>
                        <td>
                            {{ ticket.price }}
                        </td>

                        <td> </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
  </div>

{% endblock%}
